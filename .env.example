# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# NASA CMR API Configuration
CMR_BASE_URL=https://cmr.earthdata.nasa.gov/search
CMR_REQUEST_TIMEOUT=30
CMR_MAX_RETRIES=3
CMR_RATE_LIMIT_PER_SECOND=10

# Redis Configuration (for caching and state management)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_CACHE_TTL=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Development
ENVIRONMENT=development

# Vector Database Configuration (Weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Knowledge Graph Configuration (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Advanced Features (Bonus Challenge)
ENABLE_VECTOR_SEARCH=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_RAG=true